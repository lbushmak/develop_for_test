
public class Human {

	public int bmi;
	private String name;
	private int height;
	private int weight;
	private int age;

	public Human(String name, int weight, int height, int age) {
		this.name = name;
		this.height = height;
		this.weight = weight;
		this.age = age;
	}

	public Human(String name) {
		this.name = name;
	}

	public int getHeight() {
		return height;
	}

	public void setHeight(int height) {
		if (height <= 0) {
			System.out.println("Height is not valid (less or equal to 0)");
			return;
		}
		this.height = height;
	}

	public int getAge() {
		return age;
	}

	void setAge(int age) {
		if (age <= 0) {
			System.out.println("Age is not valid (less or equal to 0)");
			return;
		}

		if (age < 12) {
			System.out.println("Don't speak to strangers, child!");
			return;
		}

		this.age = age;
	}

	public int getWeight() {
		return weight;
	}

	void setWeight(int weight) {
		if (weight <= 0) {
			System.out.println("Weight is not valid (less or equal to 0)");
			return;
		}
		this.weight = weight;
	}

	public String getName() {
		return name;
	}

	void setName(String name) {
		if (name.equals("")) {
			System.out.println("Don't be shy. Tell me your name!");
			return;
		}
		this.name = name;
	}

}
