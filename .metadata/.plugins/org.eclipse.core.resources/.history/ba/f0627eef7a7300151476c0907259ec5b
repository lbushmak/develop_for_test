
public class BMI {

	public static int countBMI() {
		int bmi = Input.inputHeight() - Input.inputWeight();
		return bmi;
	}

	public static void checkBMI() {
		int bmi = countBMI();
		System.out.println("Your BMI: " + bmi);

		if (bmi > 120) {

			System.out.println(
					"Hey, " + Input.inputName() + "! My name is " + Computer.getName() + ". I'm " + Computer.getAge());
		} else if (bmi > 100 && bmi < 120) {
			System.out.println("Hey, " + Input.inputName() + "! My name is " + Computer.getName()
					+ ". I'm busy now. But you can call me later:)");
		} else {
			System.out.println("Hey, " + Input.inputName() + "! You have to go to gym. Your BMI is " + bmi);
		}

	}
}
