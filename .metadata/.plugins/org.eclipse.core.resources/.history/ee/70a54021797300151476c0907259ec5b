
public class BMI {

	public static int countBMI() {
		int bmi = Input.inputHeight() - Input.inputWeight();
		return bmi;
	}

	public static void checkBMI(Input input, Computer comp) {
		int bmi = countBMI();
		System.out.println(bmi);

		if (bmi > 120) {

			System.out.println("Hey, " + human.getName() + "! My name is " + comp.getName() + ". I'm " + comp.getAge());
		} else if (bmi > 100 && bmi < 120) {
			System.out.println("Hey, " + human.getName() + "! My name is " + comp.getName()
					+ ". I'm busy now. But you can call me later:)");
		} else {
			System.out.println("Hey, " + human.getName() + "! You have to go to gym. Your BMI is " + bmi);
		}

	}
}
